<resources>

    <style name="TextAppearance.Article.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Article.Toolbar.DetailTitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="MainBottomNavigationViewStyle"
        parent="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="itemTextColor">@color/menu_selection_highlighter</item>
        <item name="itemIconTint">@color/menu_selection_highlighter</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemTextAppearanceActive">@style/NavigationViewTextAppearance</item>
    </style>

    <style name="NavigationViewTextAppearance" parent="TextAppearance.Font.NavigationView">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Font.NavigationView" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="ItemMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_article_item</item>
        <item name="strokeWidth">@dimen/no_stroke_width</item>
    </style>

    <style name="ShareFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">@dimen/layout_margin_16dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

    <style name="ResultsNotFountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
    </style>

    <style name="StaggeredRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/recycler_view_spacing_dimen</item>
        <item name="android:scrollbars">none</item>
        <item name="layoutManager">androidx.recyclerview.widget.StaggeredGridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>

    <style name="MaterialDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/TitleTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="buttonBarButtonStyle">?attr/selectableItemBackground</item>
        <item name="rippleColor">?attr/colorAccent</item>
    </style>

</resources>
