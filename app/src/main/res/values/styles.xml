<resources>

    <style name="Base.Theme.Article" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--   The color displayed most frequently across your appâ€™s screens and components. This
        color should pass accessibility guidelines for text / iconography when drawn on top of the
        surface or background color.     -->
        <item name="colorPrimary">@color/article_green_500</item>
        <!--    A color that passes accessibility guidelines for text/iconography when drawn on top
         of the primary color.    -->
        <item name="colorOnPrimary">@color/article_yellow_500</item>
        <item name="colorPrimaryDark">@color/article_green_700</item>
        <!--  A color that passes accessibility guidelines for text/iconography when drawn on top
        of the surface color.-->
        <item name="colorAccent">@color/article_green_700</item>
        <!--  Surface colors affect surfaces of components, such as cards, sheets, and menus.-->
        <item name="colorSurface">@color/article_gray_50</item>
        <!--  A tonal variation of the secondary color.-->
        <item name="colorSecondary">@color/article_yellow_500</item>
        <!--        The background color appears behind scrollable content.-->
        <item name="android:colorBackground">@color/article_green_500</item>
    </style>

    <style name="Theme.Article" parent="Base.Theme.Article">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Article.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Article.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="TextAppearance.Article.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="MainBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="itemTextColor">@color/menu_selection_highlighter</item>
        <item name="itemIconTint">@color/menu_selection_highlighter</item>
        <item name="labelVisibilityMode">selected</item>
    </style>

    <style name="StaggeredRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/recycler_view_spacing_dimen</item>
        <item name="android:scrollbars">none</item>
        <item name="layoutManager">androidx.recyclerview.widget.StaggeredGridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>

    <style name="ResultsNotFountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="SomeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
    </style>

    <style name="ItemMaterialCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_article_item</item>
        <item name="strokeWidth">@dimen/no_stroke_width</item>
    </style>

    <style name="ShareFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">@dimen/layout_margin_16dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
    </style>

</resources>
