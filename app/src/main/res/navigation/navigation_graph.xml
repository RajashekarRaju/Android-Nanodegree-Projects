<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.developersbreach.xyzreader.view.list.BookListFragment"
        android:label="Books"
        tools:layout="@layout/fragment_book_list" >
        <action
            android:id="@+id/action_bookListFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.developersbreach.xyzreader.view.detail.BookDetailFragment"
        android:label="BookDetailFragment" >
        <argument
            android:name="detailFragmentArgs"
            app:argType="com.developersbreach.xyzreader.model.Book" />
    </fragment>

</navigation>