<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/fragment_list_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.list.ArticleListFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height_article_list"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.Article.AppBarOverlay"
            app:elevation="@dimen/app_bar_elevation_article_list">

            <androidx.appcompat.widget.Toolbar
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="pin">

                <include
                    android:id="@+id/toolbar_content_articles_header"
                    layout="@layout/toolbar_content"
                    app:layout_collapseMode="parallax" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/articles_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/recycler_view_margin_start"
            android:layout_marginEnd="@dimen/recycler_view_margin_end"
            android:layout_marginBottom="?actionBarSize"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/recycler_view_spacing_dimen"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:spanCount="2"
            tools:itemCount="6"
            tools:listitem="@layout/item_article" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>